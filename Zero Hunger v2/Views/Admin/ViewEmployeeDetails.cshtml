@model IEnumerable<Zero_Hunger_v2.DTOs.EmployeeDTO>

@{
    ViewBag.Title = "Employee Details";
}

<h2>Employee Details</h2>

<p>
    @Html.ActionLink("Add New Employee", "AddEmployee", "Admin", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Nationality</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Religion</th>
            <th>Blood Group</th>
            <th>NID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Address</td>
                <td>@emp.PhoneNumber</td>
                <td>@emp.Nationality</td>
                <td>@emp.DOB.ToString("yyyy-MM-dd")</td>
                <td>@emp.Gender</td>
                <td>@emp.Religion</td>
                <td>@emp.BloodGroup</td>
                <td>@emp.nid</td>

                <td>
                    @Html.ActionLink("Edit", "EditEmployee", new { id = emp.EmployeeID }, new { @class = "btn btn-default btn-sm" })

                    @using (Html.BeginForm("DeleteEmployee", "Admin", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this employee?');" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", emp.EmployeeID)
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                    }
                </td>

            </tr>
        }
    </tbody>
</table>


<div>
    @Html.ActionLink("Back to Dashboard", "AdminDashboard")
</div>
