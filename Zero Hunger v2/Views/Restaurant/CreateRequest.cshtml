@model Zero_Hunger_v2.DTOs.FoodCollectionDTO

@{
    ViewBag.Title = "Create Food Collection Request";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("CreateRequest", "Restaurant", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.FoodName)
        @Html.EditorFor(model => model.FoodName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.FoodName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.amount)
        @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.amount)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaxPreserve)
        @Html.EditorFor(model => model.MaxPreserve, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.MaxPreserve)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Note)
        @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Note)
    </div>

    @Html.HiddenFor(model => model.Status)
    @Html.HiddenFor(model => model.RequestTime)
    @Html.HiddenFor(model => model.RestID) 
    if (TempData["Msg"] != null)
    {
        <div style="color: green;">@TempData["Msg"]</div>
    }

    <button type="submit" class="btn btn-primary">Create Request</button>
}



<div>
    @Html.ActionLink("Back to Dashboard", "RestaurantDashboard")
</div>
